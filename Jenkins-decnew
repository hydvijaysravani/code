pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
               git credentialsId: 'c926d09c-2c48-4660-9132-9e34f4a35e18', url: 'https://github.com/hydvijaysravani/code.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        sshagent(['tomcat']){
            steps{
                sshagent(['tomcat']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.2.161:/ec2-user/apache-tomcat-9.0.79/webapps/
                    
                    ssh ec2-user@172.31.2.161:/ec2-user/apache-tomcat-9.0.79/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.2.161:/ec2-user/apache-tomcat-9.0.79/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
